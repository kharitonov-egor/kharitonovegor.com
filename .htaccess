RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.site.ru$ [NC]
RewriteRule ^(.*)$ http://kharitonovegor.xyz/$1 [R=301,L]

RewriteEngine On
RewriteCond %{SERVER_PORT} !^443$
RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

RewriteEngine On
RewriteCond %{REQUEST_URI} ! \.html$
RewriteCond %{REQUEST_URI} ! /$
RewriteRule ^(.*)$ $1.html

##Create Error Pages
ErrorDocument 404 /errors/404.html

Redirect 301 "tg" "https://t.me/kharitonov_egor"
Redirect 301 "git" https://github.com/kharitonov-egor
Redirect 301 "vk" https://vk.com/kharitonov_egor